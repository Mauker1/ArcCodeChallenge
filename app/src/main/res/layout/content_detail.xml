<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.arctouch.codechallenge.detail.DetailActivity"
    tools:showIn="@layout/activity_detail">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"/>


        <android.support.v7.widget.CardView
            android:id="@+id/detailCard"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true"
            android:visibility="invisible">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/card_margin">

                <android.support.constraint.Guideline
                    android:id="@+id/guideline_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.3"
                    app:layout_constraintGuide_begin="@dimen/card_margin"/>

                <!-- Header, with poster image, title and average vote. -->

                <ImageView
                    android:id="@+id/moviePoster"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:importantForAccessibility="no"
                    android:scaleType="centerCrop"
                    app:layout_constraintDimensionRatio="2:3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/guideline_30"
                    tools:src="@drawable/ic_image_placeholder" />

                <TextView
                    android:id="@+id/movieTitle"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/margin_default"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/primaryTextColor"
                    app:layout_constraintLeft_toRightOf="@id/guideline_30"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHeight_default="wrap"
                    app:layout_constraintWidth_default="wrap"
                    app:layout_constraintHorizontal_bias="0"
                    tools:text="Avatar"
                    style="@style/TextAppearance.AppCompat.Large"/>

                <TextView
                    android:id="@+id/stars"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/margin_default"
                    android:gravity="center_vertical"
                    android:textColor="@color/secondaryTextColor"
                    android:drawableStart="@drawable/ic_star_black_24dp"
                    android:drawablePadding="@dimen/margin_default"
                    app:layout_constraintLeft_toRightOf="@id/guideline_30"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/movieTitle"
                    app:layout_constraintHeight_default="wrap"
                    tools:text="6.2 (100)"
                    style="@style/TextAppearance.AppCompat.Small"/>

                <TextView
                    android:id="@+id/genres"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/margin_default"
                    android:textColor="@color/secondaryTextColor"
                    android:ellipsize="end"
                    app:layout_constraintLeft_toRightOf="@id/guideline_30"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/stars"
                    app:layout_constraintBottom_toBottomOf="@id/moviePoster"
                    app:layout_constraintHeight_default="spread"
                    app:layout_constraintVertical_bias="0"
                    tools:text="Drama, Sci-Fi, Action, Adventure, Fantasy"
                    style="@style/TextAppearance.AppCompat.Small"/>

                <!--END region-->

                <!-- Footer, with the overview and release date -->

                <View
                    android:id="@+id/itemDivider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/card_margin"
                    android:layout_marginBottom="@dimen/card_margin"
                    android:background="@drawable/divider"
                    app:layout_constraintTop_toBottomOf="@id/moviePoster"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/overviewTitle"
                    app:layout_constraintVertical_chainStyle="packed"/>

                <TextView
                    android:id="@+id/overviewTitle"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="@string/act_detail_overview_title"
                    android:textColor="@color/primaryTextColor"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/itemDivider"
                    app:layout_constraintBottom_toTopOf="@id/overview"
                    app:layout_constraintHeight_default="wrap"
                    tools:text="Overview"
                    style="@style/TextAppearance.AppCompat.Large"/>

                <TextView
                    android:id="@+id/overview"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_marginBottom="@dimen/card_margin"
                    android:textColor="@color/primaryTextColor"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overviewTitle"
                    app:layout_constraintBottom_toTopOf="@id/releaseDateTitle"
                    app:layout_constraintHeight_default="wrap"
                    app:layout_constraintWidth_default="wrap"
                    app:layout_constraintHorizontal_bias="0"
                    tools:text="Avatar was the first movie to debut..."
                    style="@style/TextAppearance.AppCompat.Small"/>

                <TextView
                    android:id="@+id/releaseDateTitle"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="@string/act_detail_release_date_title"
                    android:textColor="@color/primaryTextColor"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/overview"
                    app:layout_constraintBottom_toTopOf="@id/releaseDate"
                    app:layout_constraintHeight_default="wrap"
                    tools:text="Release Date"
                    style="@style/TextAppearance.AppCompat.Large"/>

                <TextView
                    android:id="@+id/releaseDate"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_marginBottom="@dimen/card_bottom_margin"
                    android:textColor="@color/primaryTextColor"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/releaseDateTitle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_default="wrap"
                    tools:text="10/01/2018"
                    style="@style/TextAppearance.AppCompat.Small"/>


                <!--END region-->

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

    </FrameLayout>


</android.support.v4.widget.NestedScrollView>
